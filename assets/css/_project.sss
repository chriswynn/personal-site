.project-description
  background: #0c1969
  display: flex
  flex-direction: column
  justify-content: center
  left: 0
  min-height: 100vh
  padding: 4rem
  position: fixed
  top: 0
  width: 50vw
  & h1
    font-size: 3rem
  & p
    color: #fff
    font-size: 1.2rem

.image-container
  background: rgba(255, 255, 255, 0.5)
  min-height: 200vh
  position: absolute
  right: 0
  top: 0
  width: 50vw
