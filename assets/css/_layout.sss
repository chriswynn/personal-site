header
  background: rgba(0,0,0,.2)
  height: 100vh
  left: 0
  position: fixed
  top: 0
  width: 15%

section
  margin-left: 15%
  min-height: 500px
  width: 85%

#color-picker
  background: rgba(0, 0, 0, .2)
  cursor: pointer
  height: 100vh
  overflow: hidden
  position: fixed
  right: 0
  top: 0
  transition: .3s ease
  transform: translateX(15px)
  width: 20px
  z-index: 20
  &:hover
    transform: translateX(0)

.Scp
  position: absolute
  right: 0

